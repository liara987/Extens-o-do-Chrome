{
  "manifest_version": 3,
  "name": "Form Filler BR",
  "version": "1.3",
  "description": "Gera dados brasileiros e preenche formul√°rios automaticamente.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
